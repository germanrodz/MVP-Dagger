<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blovvme.mvp_dagger.view.mainactivity.MainActivity">

   <Button
       android:text="Save Person in SharedPreference"
       android:onClick="doMagic"
       android:id="@+id/btnSavePerson"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <Button
       android:text="Show Person"
       android:onClick="doShared"
       android:id="@+id/btn2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <TextView
       android:gravity="center"
       android:id="@+id/tv1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
</LinearLayout>
